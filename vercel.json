{
    "version": 2,
    "builds": [
        {
            "src" : "sentix/sentix/wsgi.py",
            "use" : "@vercel/python",
            "config": {
                "maxLambdaSize": "15mb",
                "runtime": "python3.12"
            }
        },
        {
            "src" : "build_files.sh",
            "use" : "@vercel/static-build",
            "config": {
                "distDir": "staticfiles_build",
                "runtime": "python3.12"
            }
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "sentix/sentix/wsgi.py"
        }
    ]
}